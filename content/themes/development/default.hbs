<head>
  <meta charset="utf-8" />
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
  <meta content="{{meta_description}}" name="description" />
  <meta content="width=device-width, initial-scale=1" name="viewport" />
  <link href="{{asset '/favicon.ico'}}" rel="shortcut icon" />
  <link href="/rss" rel="alternate" type="application/rss+xml" />
  <title>{{meta_title}}</title>

  <!-- Facebook OG -->
  <meta content="blog" property="og:type" />
  <meta content="{{meta_description}}" property="og:description" />
  <meta content="{{@blog.logo}}" property="og:image" />

  {{#foreach posts}}
    <meta content="article" property="og:type" />
    <meta content="{{url absolute='true'}}" property="og:url" />
    <meta content="{{encode excerpt words='30'}}" property="og:description" />
    <meta content="{{encode title}}" property="og:title" />
    <meta content="{{@blog.url}}/{{@blog.logo}}" property="og:image" />
  {{/foreach}}

  <!-- Fonts -->
  <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic|PT+Serif:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons">

  <!-- CSS -->
  <link rel="stylesheet" type="text/css" href="{{asset 'css/home.css'}}" />
  <link rel="stylesheet" type="text/css" href="{{asset 'css/libs/style.css'}}" />
  <link rel="stylesheet" href="{{asset 'css/libs/material.css'}}">


  <!-- Theme JS Options -->
  <script>
    var options = {
      blogUrl : '{{@blog.url}}'
    };
  </script>

  <!-- Header Scripts -->
  <script src="{{asset 'js/libs/modernizr-2.5.3.min.js'}}"></script>

  {{ghost_head}}

</head>

<body class="{{body_class}}">

  <div id="page-wrap">

    <!-- Theme Header -->
    <header>

      <span class="header-toggle"></span>

      <div class="navigation-toggle">
        <span></span>
      </div>
            
        {{^if @blog.logo}}
          <h1 class="fancy">
            <a href="/">
              <div class="header-title-content">
                <img alt="{{@blog.title}}" src="../content/images/theme/color-hfon-skull.png" />
                <div class="header-text">{{@blog.title}}</div>
              </div>
            </a>
          </h1>
        {{/if}}
    </header>

    <!-- Theme User Profile -->

    <div class="profile-overlay">
      <div class="close"></div>
      <div class="profile">

        <!-- About -->
        <div class="about panel clearfix">
          <h1>{{@blog.title}}</h1>
          {{#if @blog.description}}
            <div class="description">{{@blog.description}}</div>
          {{/if}}
        </div>

        <!-- Social Icons -->
        <div class="social panel clearfix">
          <h2>Find Me On</h2>
          <div class="social-icons clearfix">
            {{> social-links}}
          </div>
        </div>

      </div>
    </div>

    <!-- Theme Navigation Menu -->
    <section class="navigation clearfix sidebar">

      {{> sidebar-links}}

    </section>

    <!-- Theme Post(s) -->
    <section class="posts">
      {{{body}}}
    </section>

    <!-- Theme Footer -->
    <footer>
      <p class="copyright">Copyright <a href="{{@blog.url}}/">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</p>
      <p class="pxu">
        <a href="https://www.pixelunion.net/themes/ghost/readymade-lite">Readymade Lite theme</a> by <a href="http://pixelunion.net">Pixel Union</a>
      </p>
      <span class="top" title="Back to top">Back to top</span>
    </footer>

  </div>

  {{ghost_foot}}

  <!-- Theme JS -->
  <script src="{{asset 'js/libs/script.js'}}" type="text/javascript"></script>
  <script src="{{asset 'js/libs/material.js'}}" type="text/javascript"></script>

  <!-- Google Analytics -->
  <script type="text/javascript">
    var _gaq=[['_setAccount','TRACKING ID'],['_trackPageview']];
    (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
    g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g,s)}(document,'script'));
  </script>

</body>
</html>
