{{#foreach posts}}

<article class="mdl-card mdl-shadow--2dp demo-card-wide {{post_class}}">
  <div class="mdl-card__title {{#if feature_image}}" style="background:url({{feature_image}}){{else}}{{/if}}">
    <h2 class="mdl-card__title-text">
      <a href="{{url}}">{{{title}}}</a>
      <div class="post-date mdl-card__title-time">{{date format="DD MMMM YYYY"}}</div>
    </h2>

  </div>
  <div class="mdl-card__supporting-text">
    <p>{{excerpt words="100"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
  </div>
</article>

{{/foreach}}

{{pagination}}
